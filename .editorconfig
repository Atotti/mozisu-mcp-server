# EditorConfig is awesome: https://EditorConfig.org

# トップレベルのEditorConfigファイル
root = true

# すべてのファイル
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Goファイル
[*.go]
indent_style = tab
indent_size = 4

# Makefileはタブを使用
[Makefile]
indent_style = tab

# YAMLファイル
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSONファイル
[*.json]
indent_style = space
indent_size = 2

# Markdownファイル
[*.md]
trim_trailing_whitespace = false
